    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/docViewer.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Without Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/docViewer.py",
            "console": "integratedTerminal",
        }
        ,
        {
            "name": "Build with PyInstaller",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/build.py",
            "args": ["--onefile", "--noconsole", "${workspaceFolder}/docViewer.py"],
            "console": "integratedTerminal"
        }
    ]
}
